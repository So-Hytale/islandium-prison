// Ligne membre - Membre normal avec boutons promote/demote/kick
$C = "../../../../Common.ui";

Group {
    Anchor: (Height: 38, Top: 2);
    Background: (Color: #111a24);
    Padding: (Horizontal: 15);
    LayoutMode: Left;

    // Nom du joueur
    Label #MName {
        Anchor: (Width: 200);
        Style: (FontSize: 13, TextColor: #e0e0e0, VerticalAlignment: Center);
    }

    Group { FlexWeight: 1; }

    // Role
    Label #MRole {
        Anchor: (Width: 120);
        Style: (FontSize: 12, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
    }

    // Boutons actions
    Group #MActions {
        Anchor: (Width: 200);
        LayoutMode: Left;

        Group { FlexWeight: 1; }

        // Promote
        TextButton #MPromoteBtn {
            Anchor: (Width: 50, Height: 28);
            Text: "^";
            Style: TextButtonStyle(
                Default: (
                    Background: #1a3a1a,
                    LabelStyle: (FontSize: 14, TextColor: #66bb6a, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #2a5a2a,
                    LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }

        // Demote
        TextButton #MDemoteBtn {
            Anchor: (Width: 50, Height: 28, Left: 4);
            Text: "v";
            Style: TextButtonStyle(
                Default: (
                    Background: #3a2a1a,
                    LabelStyle: (FontSize: 14, TextColor: #ff9800, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #5a3a2a,
                    LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }

        // Kick
        TextButton #MKickBtn {
            Anchor: (Width: 60, Height: 28, Left: 4);
            Text: "KICK";
            Style: TextButtonStyle(
                Default: (
                    Background: #3a1a1a,
                    LabelStyle: (FontSize: 11, TextColor: #ef5350, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #5a2a2a,
                    LabelStyle: (FontSize: 11, TextColor: #ff6666, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }

        Group { FlexWeight: 1; }
    }
}
