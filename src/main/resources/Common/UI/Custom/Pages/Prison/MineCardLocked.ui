// Template carte mine verrouillee
Group {
    FlexWeight: 1;

    Button #MineBtn {
        Style: ButtonStyle(Default: (Background: #1a1520), Hovered: (Background: #251e30));

        Group {
            LayoutMode: Top;
            Padding: (Full: 12);

            // Icone centree
            Group {
                Anchor: (Height: 80);
                LayoutMode: Left;
                Group { FlexWeight: 1; }
                Group { Anchor: (Width: 80, Height: 80); Background: PatchStyle(TexturePath: "Icons/mines.png"); }
                Group { FlexWeight: 1; }
            }

            // Nom mine
            Label #MTitle {
                Anchor: (Height: 28, Top: 6);
                Style: (FontSize: 15, TextColor: #ef5350, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }

            // Statut
            Label #MStatus {
                Anchor: (Height: 18);
                Style: (FontSize: 11, TextColor: #ef5350, HorizontalAlignment: Center);
            }
        }
    }
}
