$C = "../../Common.ui";

// HUD Prison
Group #PrisonHud {
    Anchor: (Width: 230, Height: 235, Right: 10, Top: 10);
    Background: (Color: #0a0f1acc);
    Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
    LayoutMode: Top;

    // Header
    Label #Header {
        Text: "PRISON";
        Anchor: (Height: 22);
        Style: (FontSize: 14, TextColor: #ffd700, RenderBold: true, HorizontalAlignment: Center);
    }

    Group #Sep1 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // Rang et Prestige
    Group #RankRow {
        Anchor: (Height: 26);
        LayoutMode: Left;

        Label #RankValue {
            Text: "A";
            FlexWeight: 1;
            Style: (FontSize: 16, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #PrestigeLabel {
            Text: "P";
            Anchor: (Width: 12);
            Style: (FontSize: 10, TextColor: #da70d6, VerticalAlignment: Center);
        }

        Label #PrestigeValue {
            Text: "0";
            Anchor: (Width: 25);
            Style: (FontSize: 14, TextColor: #da70d6, VerticalAlignment: Center, RenderBold: true);
        }
    }

    // Progression vers rang suivant
    Label #ProgressInfo {
        Text: "";
        Anchor: (Height: 16, Top: 1);
        Style: (FontSize: 9, TextColor: #b0b8c0, VerticalAlignment: Center);
    }

    Group #Sep2 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // Balance
    Group #BalanceRow {
        Anchor: (Height: 22);
        LayoutMode: Left;

        Label #BalanceLabel {
            Text: "$";
            Anchor: (Width: 18);
            Style: (FontSize: 14, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #BalanceValue {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #69f0ae, VerticalAlignment: Center, RenderBold: true);
        }
    }

    // Blocs mines
    Group #BlocksRow {
        Anchor: (Height: 20, Top: 1);
        LayoutMode: Left;

        Label #BlocksLabel {
            Text: "Blocs:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #BlocksValue {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #82b1ff, VerticalAlignment: Center);
        }
    }

    // Mine actuelle
    Group #MineRow {
        Anchor: (Height: 20, Top: 1);
        LayoutMode: Left;

        Label #MineLabel {
            Text: "Mine:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #MineValue {
            Text: "Aucune";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #4dd0e1, VerticalAlignment: Center);
        }
    }

    Group #Sep3 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // Fortune
    Group #FortuneRow {
        Anchor: (Height: 18);
        LayoutMode: Left;

        Label #FortuneLabel {
            Text: "Fortune";
            Anchor: (Width: 70);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #FortunePips {
            Text: "-----";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #3a3a4a, VerticalAlignment: Center);
        }

        Label #FortuneLevel {
            Text: "0/5";
            Anchor: (Width: 30);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center, HorizontalAlignment: Right);
        }
    }

    // Efficiency
    Group #EffRow {
        Anchor: (Height: 18, Top: 2);
        LayoutMode: Left;

        Label #EffLabel {
            Text: "Vitesse";
            Anchor: (Width: 70);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #EffPips {
            Text: "-----";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #3a3a4a, VerticalAlignment: Center);
        }

        Label #EffLevel {
            Text: "0/5";
            Anchor: (Width: 30);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center, HorizontalAlignment: Right);
        }
    }

    // Auto-Sell
    Group #AutoSellRow {
        Anchor: (Height: 18, Top: 2);
        LayoutMode: Left;

        Label #ASLabel {
            Text: "Auto-Sell";
            Anchor: (Width: 70);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #ASValue {
            Text: "---";
            FlexWeight: 1;
            Style: (FontSize: 10, TextColor: #505060, VerticalAlignment: Center, HorizontalAlignment: Right, RenderBold: true);
        }
    }

    Group #Sep4 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // Multiplicateur
    Group #MultiplierRow {
        Anchor: (Height: 20);
        LayoutMode: Left;

        Label #MultLabel {
            Text: "Multi:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #MultValue {
            Text: "x1.0";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #c6ff00, VerticalAlignment: Center, RenderBold: true);
        }
    }
}
