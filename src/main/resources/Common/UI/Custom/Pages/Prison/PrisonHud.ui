$C = "../../Common.ui";

// HUD Prison - Affiche les infos du joueur
Group #PrisonHud {
    Anchor: (Width: 220, Height: 190, Right: 10, Top: 10);
    Background: (Color: #0a0f17cc);
    Padding: (Full: 10);
    LayoutMode: Top;

    // Rang et Prestige
    Group #RankRow {
        Anchor: (Height: 28);
        LayoutMode: Left;

        Label #RankLabel {
            Text: "Rang:";
            Anchor: (Width: 50);
            Style: (FontSize: 12, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #RankValue {
            Text: "A";
            Anchor: (Width: 40);
            Style: (FontSize: 16, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #PrestigeLabel {
            Text: "P";
            Anchor: (Width: 15, Left: 5);
            Style: (FontSize: 10, TextColor: #ff69b4, VerticalAlignment: Center);
        }

        Label #PrestigeValue {
            Text: "0";
            Anchor: (Width: 30);
            Style: (FontSize: 14, TextColor: #ff69b4, VerticalAlignment: Center, RenderBold: true);
        }
    }

    // Multiplicateur
    Group #MultiplierRow {
        Anchor: (Height: 22, Top: 2);
        LayoutMode: Left;

        Label #MultiplierLabel {
            Text: "Multi:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #MultiplierValue {
            Text: "x1.0";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #00ff7f, VerticalAlignment: Center, RenderBold: true);
        }
    }

    // Separateur
    Group #Separator {
        Anchor: (Height: 1, Top: 5, Bottom: 5);
        Background: (Color: #4a4a6a);
    }

    // Mine actuelle
    Group #MineRow {
        Anchor: (Height: 22, Top: 2);
        LayoutMode: Left;

        Label #MineLabel {
            Text: "Mine:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #MineValue {
            Text: "Aucune";
            FlexWeight: 1;
            Style: (FontSize: 12, TextColor: #70a0c0, VerticalAlignment: Center);
        }
    }

    // Balance
    Group #BalanceRow {
        Anchor: (Height: 22, Top: 2);
        LayoutMode: Left;

        Label #BalanceLabel {
            Text: "$";
            Anchor: (Width: 20);
            Style: (FontSize: 14, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #BalanceValue {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center);
        }
    }

    // Separateur 2
    Group #Separator2 {
        Anchor: (Height: 1, Top: 5, Bottom: 5);
        Background: (Color: #4a4a6a);
    }

    // Blocs mines
    Group #BlocksRow {
        Anchor: (Height: 22, Top: 2);
        LayoutMode: Left;

        Label #BlocksLabel {
            Text: "Blocs:";
            Anchor: (Width: 50);
            Style: (FontSize: 11, TextColor: #808080, VerticalAlignment: Center);
        }

        Label #BlocksValue {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 12, TextColor: #87ceeb, VerticalAlignment: Center);
        }
    }

    // Upgrades
    Group #UpgradesRow {
        Anchor: (Height: 22, Top: 2);
        LayoutMode: Left;

        Label #FortuneLabel {
            Text: "F0";
            Anchor: (Width: 35);
            Style: (FontSize: 11, TextColor: #e0a040, VerticalAlignment: Center, RenderBold: true);
        }

        Label #EfficiencyLabel {
            Text: "E0";
            Anchor: (Width: 35, Left: 5);
            Style: (FontSize: 11, TextColor: #40a0e0, VerticalAlignment: Center, RenderBold: true);
        }

        Label #AutoSellLabel {
            Text: "AS:OFF";
            Anchor: (Width: 60, Left: 5);
            Style: (FontSize: 10, TextColor: #808080, VerticalAlignment: Center);
        }
    }
}
