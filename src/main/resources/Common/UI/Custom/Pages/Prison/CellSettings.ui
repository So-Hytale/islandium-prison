// Cell Settings - Page parametres (niveau, acces, suppression)
$C = "../../../../Common.ui";

Group {
    LayoutMode: Top;

    // === SECTION NIVEAU ===
    Group {
        Anchor: (Height: 120);
        Background: (Color: #151d28);
        Padding: (Full: 15);
        LayoutMode: Top;

        // Titre section
        Group {
            Anchor: (Height: 24);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label {
                Text: "-- NIVEAU --";
                Style: (FontSize: 13, TextColor: #7c8b99, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Niveau actuel
        Group {
            Anchor: (Height: 28, Top: 6);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label #SettingsLevelName {
                Style: (FontSize: 16, TextColor: #ff9800, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Infos taille + membres
        Group {
            Anchor: (Height: 20, Top: 2);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label #SettingsLevelInfo {
                Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Bouton upgrade centre
        Group #UpgradeZone {
            Anchor: (Height: 36, Top: 6);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            TextButton #UpgradeBtn {
                Anchor: (Width: 280, Height: 36);
                Style: TextButtonStyle(
                    Default: (
                        Background: #1a3a5f,
                        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Hovered: (
                        Background: #2a4a7f,
                        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Sounds: $C.@ButtonSounds,
                );
            }
            Group { FlexWeight: 1; }
        }
    }

    // Espacement
    Group { Anchor: (Height: 12); }

    // === SECTION ACCES ===
    Group {
        Anchor: (Height: 80);
        Background: (Color: #151d28);
        Padding: (Full: 15);
        LayoutMode: Top;

        // Titre section
        Group {
            Anchor: (Height: 24);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label {
                Text: "-- ACCES --";
                Style: (FontSize: 13, TextColor: #7c8b99, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Bouton toggle centre
        Group {
            Anchor: (Height: 36, Top: 6);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            TextButton #TogglePublicBtn {
                Anchor: (Width: 280, Height: 36);
                Style: TextButtonStyle(
                    Default: (
                        Background: #2d4a5a,
                        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Hovered: (
                        Background: #3d5a6a,
                        LabelStyle: (FontSize: 13, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Sounds: $C.@ButtonSounds,
                );
            }
            Group { FlexWeight: 1; }
        }
    }

    // Espacement
    Group { Anchor: (Height: 12); }

    // === SECTION DANGER ===
    Group {
        Anchor: (Height: 80);
        Background: (Color: #1a1215);
        Padding: (Full: 15);
        LayoutMode: Top;

        // Titre section
        Group {
            Anchor: (Height: 24);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label {
                Text: "-- ZONE DANGER --";
                Style: (FontSize: 13, TextColor: #ef5350, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Bouton supprimer centre
        Group {
            Anchor: (Height: 36, Top: 6);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            TextButton #DeleteCellBtn {
                Anchor: (Width: 280, Height: 36);
                Text: "SUPPRIMER LA CELLULE";
                Style: TextButtonStyle(
                    Default: (
                        Background: #5f1a1a,
                        LabelStyle: (FontSize: 13, TextColor: #ff4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Hovered: (
                        Background: #7f2a2a,
                        LabelStyle: (FontSize: 13, TextColor: #ff6666, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                    ),
                    Sounds: $C.@ButtonSounds,
                );
            }
            Group { FlexWeight: 1; }
        }
    }
}
