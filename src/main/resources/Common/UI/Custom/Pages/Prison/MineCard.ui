// Template carte mine - accessible
Group {
    FlexWeight: 1;

    Button #MineBtn {
        Style: ButtonStyle(Default: (Background: #151d28), Hovered: (Background: #1e2d3d));

        Group {
            LayoutMode: Top;
            Padding: (Full: 12);

            // Conteneur icone - sera rempli par cmd.append() avec le bon .ui d'icone
            Group #IconSlot {
                Anchor: (Height: 80);
                LayoutMode: Left;
                Group { FlexWeight: 1; }
                Group #IconTarget {
                    Anchor: (Width: 80, Height: 80);
                    Background: PatchStyle(TexturePath: "mines.png");
                }
                Group { FlexWeight: 1; }
            }

            // Nom mine
            Label #MTitle {
                Anchor: (Height: 28, Top: 6);
                Style: (FontSize: 15, TextColor: #4fc3f7, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }

            // Statut
            Label #MStatus {
                Anchor: (Height: 18);
                Style: (FontSize: 11, TextColor: #66bb6a, HorizontalAlignment: Center);
            }

            // Zone bouton TP
            Group #TpZone {
                Anchor: (Height: 32, Top: 4);
                LayoutMode: Left;
                Visible: false;
                Group { FlexWeight: 1; }
                TextButton #TpBtn {
                    Anchor: (Width: 90, Height: 28);
                    Text: "TP";
                    Style: TextButtonStyle(
                        Default: (Background: #2a5f2a, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
                        Hovered: (Background: #4a9f4a, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
                    );
                }
                Group { FlexWeight: 1; }
            }
        }
    }
}
