// Cell Hub - Page principale avec 3 cartes (Teleporter, Membres, Parametres)
$C = "../../Common.ui";
@IconCellule = PatchStyle(TexturePath: "Icons/cellule.png");

Group {
    LayoutMode: Top;

    // Info cellule - bandeau haut
    Group #CellInfoBar {
        Anchor: (Height: 70);
        Background: (Color: #151d28);
        Padding: (Full: 15);
        LayoutMode: Top;

        // Ligne 1: Proprietaire
        Group {
            Anchor: (Height: 28);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label #CellOwnerLabel {
                Style: (FontSize: 16, TextColor: #8d6e63, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }

        // Ligne 2: Niveau + Membres
        Group {
            Anchor: (Height: 22);
            LayoutMode: Left;
            Group { FlexWeight: 1; }
            Label #CellLevelLabel {
                Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Label {
                Anchor: (Width: 30);
                Text: " | ";
                Style: (FontSize: 12, TextColor: #4a5568, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Label #CellMembersLabel {
                Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Label {
                Anchor: (Width: 30);
                Text: " | ";
                Style: (FontSize: 12, TextColor: #4a5568, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Label #CellAccessLabel {
                Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
            }
            Group { FlexWeight: 1; }
        }
    }

    // Espacement
    Group { Anchor: (Height: 30); }

    // Grille 3 cartes centrees
    Group {
        Anchor: (Height: 200);
        LayoutMode: Left;
        Padding: (Horizontal: 40);

        // Carte TELEPORTER
        Group {
            FlexWeight: 1;
            Padding: (Right: 10);

            Button #CellTpCard {
                Style: ButtonStyle(Default: (Background: #151d28), Hovered: (Background: #1e2d3d));

                Group {
                    LayoutMode: Top;
                    Padding: (Full: 15);

                    // Icone
                    Group {
                        Anchor: (Height: 70);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Group {
                            Anchor: (Width: 70, Height: 70);
                            Background: PatchStyle(TexturePath: "Icons/cellule.png");
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Titre
                    Group {
                        Anchor: (Height: 30, Top: 10);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "TELEPORTER";
                            Style: (FontSize: 15, TextColor: #66bb6a, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Description
                    Group {
                        Anchor: (Height: 20, Top: 4);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "Aller a ta cellule";
                            Style: (FontSize: 11, TextColor: #7c8b99, HorizontalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }
                }
            }
        }

        // Carte MEMBRES
        Group {
            FlexWeight: 1;
            Padding: (Horizontal: 5);

            Button #CellMembersCard {
                Style: ButtonStyle(Default: (Background: #151d28), Hovered: (Background: #1e2d3d));

                Group {
                    LayoutMode: Top;
                    Padding: (Full: 15);

                    // Icone
                    Group {
                        Anchor: (Height: 70);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Group {
                            Anchor: (Width: 70, Height: 70);
                            Background: PatchStyle(TexturePath: "Icons/mines.png");
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Titre
                    Group {
                        Anchor: (Height: 30, Top: 10);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "MEMBRES";
                            Style: (FontSize: 15, TextColor: #4fc3f7, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Description
                    Group {
                        Anchor: (Height: 20, Top: 4);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "Gerer les joueurs";
                            Style: (FontSize: 11, TextColor: #7c8b99, HorizontalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }
                }
            }
        }

        // Carte PARAMETRES
        Group {
            FlexWeight: 1;
            Padding: (Left: 10);

            Button #CellSettingsCard {
                Style: ButtonStyle(Default: (Background: #151d28), Hovered: (Background: #1e2d3d));

                Group {
                    LayoutMode: Top;
                    Padding: (Full: 15);

                    // Icone
                    Group {
                        Anchor: (Height: 70);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Group {
                            Anchor: (Width: 70, Height: 70);
                            Background: PatchStyle(TexturePath: "Icons/upgrades.png");
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Titre
                    Group {
                        Anchor: (Height: 30, Top: 10);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "PARAMETRES";
                            Style: (FontSize: 15, TextColor: #ff9800, RenderBold: true, RenderUppercase: true, HorizontalAlignment: Center, VerticalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }

                    // Description
                    Group {
                        Anchor: (Height: 20, Top: 4);
                        LayoutMode: Left;
                        Group { FlexWeight: 1; }
                        Label {
                            Text: "Niveau, acces...";
                            Style: (FontSize: 11, TextColor: #7c8b99, HorizontalAlignment: Center);
                        }
                        Group { FlexWeight: 1; }
                    }
                }
            }
        }
    }
}
