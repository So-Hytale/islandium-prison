// Cell - Vue quand le joueur n'a pas de cellule
$C = "../../../../Common.ui";

Group {
    LayoutMode: Top;

    // Espacement haut
    Group { Anchor: (Height: 120); }

    // Icone centree
    Group {
        Anchor: (Height: 88);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Group {
            Anchor: (Width: 88, Height: 88);
            Background: PatchStyle(TexturePath: "Icons/cellule.png");
        }
        Group { FlexWeight: 1; }
    }

    // Espacement
    Group { Anchor: (Height: 20); }

    // Titre
    Group {
        Anchor: (Height: 30);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Label {
            Text: "Pas de cellule";
            Style: (FontSize: 18, TextColor: #8d6e63, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
        Group { FlexWeight: 1; }
    }

    // Description
    Group {
        Anchor: (Height: 24);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Label {
            Text: "Achete une cellule pour construire et inviter des amis!";
            Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
        Group { FlexWeight: 1; }
    }

    // Espacement
    Group { Anchor: (Height: 20); }

    // Bouton ACHETER centre
    Group {
        Anchor: (Height: 45);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        TextButton #BuyCellBtn {
            Anchor: (Width: 280, Height: 45);
            Style: TextButtonStyle(
                Default: (
                    Background: #2a5f2a,
                    LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #3a7f3a,
                    LabelStyle: (FontSize: 15, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }
        Group { FlexWeight: 1; }
    }
}
