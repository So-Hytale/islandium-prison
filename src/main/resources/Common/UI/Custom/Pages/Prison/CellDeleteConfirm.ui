// Confirmation de suppression de cellule
$C = "../../Common.ui";

Group {
    LayoutMode: Top;

    // Espacement haut
    Group { Anchor: (Height: 100); }

    // Titre
    Group {
        Anchor: (Height: 30);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Label {
            Text: "Confirmer la suppression";
            Style: (FontSize: 18, TextColor: #ef5350, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
        Group { FlexWeight: 1; }
    }

    // Description
    Group {
        Anchor: (Height: 24, Top: 8);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Label {
            Text: "Cette action est irreversible!";
            Style: (FontSize: 13, TextColor: #96a9be, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
        Group { FlexWeight: 1; }
    }

    Group {
        Anchor: (Height: 20, Top: 2);
        LayoutMode: Left;
        Group { FlexWeight: 1; }
        Label {
            Text: "Tous les blocs et membres seront supprimes.";
            Style: (FontSize: 12, TextColor: #7c8b99, HorizontalAlignment: Center, VerticalAlignment: Center);
        }
        Group { FlexWeight: 1; }
    }

    // Espacement
    Group { Anchor: (Height: 30); }

    // Boutons
    Group {
        Anchor: (Height: 45);
        LayoutMode: Left;
        Group { FlexWeight: 1; }

        TextButton #ConfirmDeleteBtn {
            Anchor: (Width: 200, Height: 45);
            Text: "OUI, SUPPRIMER";
            Style: TextButtonStyle(
                Default: (
                    Background: #5f1a1a,
                    LabelStyle: (FontSize: 14, TextColor: #ff4444, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #7f2a2a,
                    LabelStyle: (FontSize: 14, TextColor: #ff6666, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }

        TextButton #CancelDeleteBtn {
            Anchor: (Width: 150, Height: 45, Left: 15);
            Text: "ANNULER";
            Style: TextButtonStyle(
                Default: (
                    Background: #1a2836,
                    LabelStyle: (FontSize: 14, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Hovered: (
                    Background: #253545,
                    LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)
                ),
                Sounds: $C.@ButtonSounds,
            );
        }

        Group { FlexWeight: 1; }
    }
}
