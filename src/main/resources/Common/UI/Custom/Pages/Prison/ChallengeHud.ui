$C = "../../Common.ui";
Group #ChallengeHud {
  LayoutMode: Top;
  Background: (Color: #0a0f1acc);
  Anchor: (Width: 220, Left: 10, Top: 300);
  Padding: (Left: 10, Right: 10, Top: 6, Bottom: 6);
  Group #HeaderRow {
    LayoutMode: Left;
    Anchor: (Height: 22, Left: -10, Right: -10, Top: -6);
    Background: (Color: #151d2a);
    Padding: (Horizontal: 10);
    Label #Header {
      FlexWeight: 1;
      Text: "DEFIS SUIVIS";
      Style: (FontSize: 11, TextColor: #ff9800, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
    }
  }
  Group #Sep {
    Background: (Color: #2a3a5c);
    Anchor: (Height: 1, Top: 4, Bottom: 2);
  }
  Group #Slots {
    LayoutMode: Top;
  }
}
