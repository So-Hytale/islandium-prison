// Ligne membre - Proprietaire (pas de boutons d'action)
$C = "../../Common.ui";

Group {
    Anchor: (Height: 38);
    Background: (Color: #151d28);
    Padding: (Horizontal: 15);
    LayoutMode: Left;

    // Nom du joueur
    Label #MOwnerName {
        Anchor: (Width: 200);
        Style: (FontSize: 13, TextColor: #ffd700, RenderBold: true, VerticalAlignment: Center);
    }

    Group { FlexWeight: 1; }

    // Role
    Label {
        Anchor: (Width: 120);
        Text: "Proprietaire";
        Style: (FontSize: 12, TextColor: #ffd700, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
    }

    // Zone actions vide (alignement)
    Group {
        Anchor: (Width: 200);
    }
}
