$C = "../../Common.ui";

// HUD Prison â€” Design Premium RPG
Group #PrisonHud {
    Anchor: (Width: 240, Height: 280, Right: 10, Top: 10);
    Background: (Color: #0a0f1acc);
    Padding: (Left: 12, Right: 12, Top: 8, Bottom: 8);
    LayoutMode: Top;

    // ===== HEADER =====
    Label #Header {
        Text: "PRISON";
        Anchor: (Height: 22);
        Style: (FontSize: 14, TextColor: #ffd700, RenderBold: true, HorizontalAlignment: Center);
    }

    Group #Sep1 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // ===== SECTION RANG =====
    Group #RankRow {
        Anchor: (Height: 24);
        LayoutMode: Left;

        Label #RankValue {
            Text: "Rang A";
            FlexWeight: 1;
            Style: (FontSize: 15, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #PrestigeValue {
            Text: "";
            Anchor: (Width: 40);
            Style: (FontSize: 12, TextColor: #da70d6, VerticalAlignment: Center, HorizontalAlignment: Right, RenderBold: true);
        }
    }

    // Barre de progression
    Group #ProgressBarBg {
        Anchor: (Height: 6, Top: 3);
        Background: (Color: #1a2535);
        LayoutMode: Left;

        Group #ProgressBarFill {
            Anchor: (Height: 6, Width: 0);
            Background: (Color: #00c853);
        }
    }

    // Info progression
    Group #ProgressRow {
        Anchor: (Height: 16, Top: 2);
        LayoutMode: Left;

        Label #ProgressPercent {
            Text: "0%";
            Anchor: (Width: 35);
            Style: (FontSize: 9, TextColor: #ffffff, VerticalAlignment: Center);
        }

        Label #NextRankInfo {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 9, TextColor: #b0b8c0, VerticalAlignment: Center, HorizontalAlignment: Right);
        }
    }

    // Label rang max (visible seulement si rang max)
    Label #MaxRankLabel {
        Text: "";
        Anchor: (Height: 0);
        Style: (FontSize: 10, TextColor: #69f0ae, HorizontalAlignment: Center);
    }

    Group #Sep2 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // ===== SECTION ECONOMIE =====
    Group #BalanceRow {
        Anchor: (Height: 22);
        LayoutMode: Left;

        Label #BalanceIcon {
            Text: "$";
            Anchor: (Width: 18);
            Style: (FontSize: 14, TextColor: #ffd700, VerticalAlignment: Center, RenderBold: true);
        }

        Label #BalanceValue {
            Text: "0";
            FlexWeight: 1;
            Style: (FontSize: 14, TextColor: #69f0ae, VerticalAlignment: Center, RenderBold: true);
        }
    }

    Group #BlocksRow {
        Anchor: (Height: 20, Top: 1);
        LayoutMode: Left;

        Label #BlocksIcon {
            Text: "B";
            Anchor: (Width: 18);
            Style: (FontSize: 11, TextColor: #82b1ff, VerticalAlignment: Center, RenderBold: true);
        }

        Label #BlocksValue {
            Text: "0 blocs";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #82b1ff, VerticalAlignment: Center);
        }
    }

    Group #MineRow {
        Anchor: (Height: 20, Top: 1);
        LayoutMode: Left;

        Label #MineIcon {
            Text: "M";
            Anchor: (Width: 18);
            Style: (FontSize: 11, TextColor: #8090a0, VerticalAlignment: Center, RenderBold: true);
        }

        Label #MineValue {
            Text: "Aucune";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #4dd0e1, VerticalAlignment: Center);
        }
    }

    Group #Sep3 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // ===== SECTION UPGRADES =====
    Group #FortuneRow {
        Anchor: (Height: 18);
        LayoutMode: Left;

        Label #FortuneLabel {
            Text: "Fortune";
            Anchor: (Width: 75);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #FortunePips {
            Text: "-----";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #3a3a4a, VerticalAlignment: Center);
        }

        Label #FortuneLevel {
            Text: "0/5";
            Anchor: (Width: 30);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center, HorizontalAlignment: Right);
        }
    }

    Group #EfficiencyRow {
        Anchor: (Height: 18, Top: 2);
        LayoutMode: Left;

        Label #EffLabel {
            Text: "Vitesse";
            Anchor: (Width: 75);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #EffPips {
            Text: "-----";
            FlexWeight: 1;
            Style: (FontSize: 11, TextColor: #3a3a4a, VerticalAlignment: Center);
        }

        Label #EffLevel {
            Text: "0/5";
            Anchor: (Width: 30);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center, HorizontalAlignment: Right);
        }
    }

    Group #AutoSellRow {
        Anchor: (Height: 18, Top: 2);
        LayoutMode: Left;

        Label #ASLabel {
            Text: "Auto-Sell";
            Anchor: (Width: 75);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #ASStatus {
            Text: "---";
            FlexWeight: 1;
            Style: (FontSize: 10, TextColor: #505060, VerticalAlignment: Center, HorizontalAlignment: Right, RenderBold: true);
        }
    }

    Group #Sep4 {
        Anchor: (Height: 1, Top: 4, Bottom: 4);
        Background: (Color: #2a3a5c);
    }

    // ===== SECTION MULTIPLICATEUR =====
    Group #MultiplierRow {
        Anchor: (Height: 20);
        LayoutMode: Left;

        Label #MultLabel {
            Text: "Multi";
            Anchor: (Width: 50);
            Style: (FontSize: 10, TextColor: #8090a0, VerticalAlignment: Center);
        }

        Label #MultValue {
            Text: "x1.0";
            FlexWeight: 1;
            Style: (FontSize: 12, TextColor: #c6ff00, VerticalAlignment: Center, RenderBold: true);
        }
    }
}
